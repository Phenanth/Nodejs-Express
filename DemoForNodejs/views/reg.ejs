<form class="form-horizontal" method="post">
	<fieldset>
		<legend>用户注册</legend>
		<div class="control-group">
			<label for="username">用户名</label>
			<div class="controls">
				<input type="text" class="input-xlarge" id="username" name="username">
				<p class="help-block">账户名称，用于登陆。</p>
			</div>
		</div>
		<div class="control-group">
			<label class="control-label" for="password">密码</label>
			<div class="controls">
				<input type="password" class="input-xlarge" id="password" name="password">
			</div>
		</div>
		<divc class="control-group">
			<label class="control-label" for="password-repeat">验证密码</label>
			<div class="controls">
				<input type="password" class="input-xlarge" id="password-repeat" name="password-repeat">
			</div>
		</div>
		<div class="form-actions">
			<button type="submit" class="btn btn-primary" src="/">注册</button>
		</div>
	</fieldset>
</form>